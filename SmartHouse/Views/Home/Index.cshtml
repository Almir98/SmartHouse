@using SmartGreenhouse.Database;
@using SmartGreenhouse.ViewModel;
@model List<TemperatureVM>

<style>
    #dataTable td {
        color: black;
    }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Temperatura</h2>
            <hr />
        </div>
    </div>
</div>
<div class="ecommerce-widget">
    <div class="row">
        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="text-muted">Trenutna temperatura</h5>
                    <div class="metric-value d-inline-block">
                        <h2 class="mb-1">@ViewBag.last °C</h2>
                    </div>
                    <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="text-muted">Optimalna temperatura</h5>
                    <div class="metric-value d-inline-block">
                        <h2 class="mb-1">25 °C</h2>
                    </div>
                    <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="white-box">
            <h3 class="box-title">Grafički prikaz vrijednosti temperature</h3>
            <canvas id="chart"></canvas>
        </div>
    </div>
</div>
<br /><br /><br />
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="white-box">
            <div class="col-md-3 col-sm-4 col-xs-6 pull-right">
            </div>
            <h3 class="box-title">Tabelarni prikaz vrijednosti temperature</h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="dataTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Datum pohrane vrijednosti</th>
                            <th>Izmjerena temperatura</th>
                            <th>Indeks topline</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="txt-oflo">@item.InsertDate</td>
                                <td class="txt-oflo">@item.Temperature</td>
                                <td class="txt-oflo">@item.HeatIndex</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button type="button" class="btn btn-info" onclick="location.href='Home/ExportTemperatureToExcel'">Export to Excel</button>
                @*<button type="button" class="btn btn-info ml-20" id="btnExport" onclick="ExportPDF()">Export to PDF</button>*@

            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
<script>

    var table = document.getElementById('dataTable');
    var json = [];
    var headers = [];

    for (var i = 0; i < table.rows[0].cells.length; i++) {
        headers[i] = table.rows[0].cells[i].innerHTML.toLowerCase().replace(/ /gi, '');
    }
    for (var i = 1; i < table.rows.length; i++) {
        var tableRow = table.rows[i];
        var rowData = {};
        for (var j = 0; j < tableRow.cells.length; j++) {
            rowData[headers[j]] = tableRow.cells[j].innerHTML;
        }
        json.push(rowData);
    }

    var labels = json.map(function (e) {
        return e.datumpohranevrijednosti;
    });
    var values = json.map(function (e) {
        return e.izmjerenatemperatura;
    });

    var myChart = new Chart('chart', {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: "Temperatura",
                data: values,
                backgroundColor: 'rgb(140, 160, 224)',
                borderColor: 'blue',
                borderWidth: 1
            }]
        }
    });

    function ExportPDF() {
        html2canvas(document.getElementById('dataTable'), {
            onrendered: function (canvas) {
                var data = canvas.toDataURL();
                var docDefinition = {
                    content: [{
                        image: data,
                        width: 500
                    }]
                };
                pdfMake.createPdf(docDefinition).download("TemperatureValues.pdf");
            }
        });
    }
</script>